<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/include_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/select_time"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/select_time1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_mode_textview"
            android:gravity="center"
            android:text="时间范围拦截"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/select_black"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/select_black1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/select_mode_textview"
            android:text="黑名单拦截"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/select_no"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/select_no1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/select_mode_textview"
            android:text="陌生人拦截"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/select_place"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/select_place1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/select_mode_textview"
            android:text="归属地拦截"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/select_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/s_black"
        android:text="确定"
        android:textColor="@android:color/white" />
</LinearLayout>